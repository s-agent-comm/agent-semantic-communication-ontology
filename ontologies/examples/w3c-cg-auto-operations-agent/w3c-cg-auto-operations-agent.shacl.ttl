@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix core: <https://ns.slashlife.ai/agent/core#> .
@prefix agent: <https://ns.slashlife.ai/agent/agent#> .
@prefix security: <https://ns.slashlife.ai/agent/security-binding#> .
@prefix ex: <https://ns.slashlife.ai/agent/examples/w3c-cg-auto-operations-agent#> .

# Shape for the main Agent
ex:CgOperationsAgentShape
    a sh:NodeShape ;
    sh:targetNode ex:CgOperationsAgent ;
    sh:property [
        sh:path agent:hasProfile ;
        sh:node ex:CgOperationsAgentProfileShape ;
    ] .

# Shape for the Agent's Profile
ex:CgOperationsAgentProfileShape
    a sh:NodeShape ;
    sh:property [
        sh:path agent:coreIdentity ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path agent:did ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:datatype xsd:string ;
                sh:pattern "^did:example:w3c-cg-ops-agent$" ;
            ]
        ]
    ] ;
    sh:property [
        sh:path agent:capabilities ;
        sh:minCount 1 ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path agent:skill ;
                sh:minCount 3 ;
            ]
        ]
    ] ;
    sh:property [
        sh:path agent:systemIntegrationAndDependencies ;
        sh:minCount 1 ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path agent:dependsOn ;
                sh:minCount 2 ;
            ]
        ]
    ] .

# Shape to validate the security binding on the PublishMinutesAction
ex:PublishMinutesActionShape
    a sh:NodeShape ;
    sh:targetNode ex:PublishMinutesAction ;
    sh:property [
        sh:path security:securityBinding ;
        sh:minCount 1 ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path security:signedBy ;
                sh:hasValue ex:CgOperationsAgent ;
            ]
        ]
    ] .

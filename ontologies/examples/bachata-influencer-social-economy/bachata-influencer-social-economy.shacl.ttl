@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix core: <https://ns.slashlife.ai/agent/core#> .
@prefix agent: <https://ns.slashlife.ai/agent/agent#> .
@prefix intent: <https://ns.slashlife.ai/agent/intent#> .
@prefix delegation: <https://ns.slashlife.ai/agent/delegation#> .
@prefix payment: <https://ns.slashlife.ai/agent/payment#> .
@prefix contract: <https://ns.slashlife.ai/agent/contract#> .
@prefix ex: <https://ns.slashlife.ai/agent/examples/bachata-influencer-social-economy#> .

# --- Agent Shapes ---

ex:BachataDancerAgentShape
    a sh:NodeShape ;
    sh:targetNode ex:BachataDancerAgent ;
    sh:property [
        sh:path agent:hasProfile ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path agent:capabilities ;
                sh:node [
                    a sh:NodeShape ;
                    sh:property [
                        sh:path agent:skill ;
                        sh:minCount 1 ;
                    ]
                ]
            ]
        ]
    ] .

# --- Delegation Shapes ---

ex:BrandSponsorshipDealShape
    a sh:NodeShape ;
    sh:targetNode ex:BrandSponsorshipDeal ;
    sh:property [
        sh:path delegation:delegatedBy ;
        sh:hasValue ex:BrandSponsorAgent ;
    ] ;
    sh:property [
        sh:path delegation:delegatesTo ;
        sh:hasValue ex:BachataDancerAgent ;
    ] ;
    sh:property [
        sh:path delegation:delegationScope ;
        sh:datatype xsd:string ;
        sh:pattern ".*payment of [0-9]+ USD.*" ; # Ensure the scope includes a payment amount
    ] .

# --- Contract and Payment Shapes ---

ex:SponsorshipContractShape
    a sh:NodeShape ;
    sh:targetNode ex:SponsorshipContract ;
    sh:property [
        sh:path contract:termsUri ;
        sh:nodeKind sh:IRI ;
    ] .

ex:SponsorshipPaymentShape
    a sh:NodeShape ;
    sh:targetNode ex:SponsorshipPayment ;
    sh:property [
        sh:path payment:amount ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path payment:currency ;
        sh:hasValue "USD" ;
    ] ;
    sh:property [
        sh:path payment:payee ;
        sh:hasValue "did:example:sofia-dancer" ;
    ] .

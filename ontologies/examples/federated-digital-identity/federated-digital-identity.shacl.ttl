@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix core: <https://ns.slashlife.ai/agent/core#> .
@prefix agent: <https://ns.slashlife.ai/agent/agent#> .
@prefix intent: <https://ns.slashlife.ai/agent/intent#> .
@prefix delegation: <https://ns.slashlife.ai/agent/delegation#> .
@prefix security: <https://ns.slashlife.ai/agent/security-binding#> .
@prefix execution-context: <https://ns.slashlife.ai/agent/execution-context#> .
@prefix ex: <https://ns.slashlife.ai/agent/examples/federated-digital-identity#> .

# --- Agent Base Shape (reusable) --- 

ex:AgentBaseShape
    a sh:NodeShape ;
    sh:targetClass core:Agent ;
    sh:property [
        sh:path agent:hasProfile ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path agent:coreIdentity ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:node [
                    a sh:NodeShape ;
                    sh:property [
                        sh:path agent:did ;
                        sh:minCount 1 ;
                        sh:maxCount 1 ;
                        sh:datatype xsd:string ;
                        sh:pattern "^did:.+$" ;
                    ]
                ]
            ] ;
            sh:property [
                sh:path agent:purposeAndRole ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:node [
                    a sh:NodeShape ;
                    sh:property [
                        sh:path agent:objective ;
                        sh:minCount 1 ;
                        sh:maxCount 1 ;
                        sh:datatype xsd:string ;
                    ]
                ]
            ]
        ]
    ] .

# --- Intent Shape --- 

ex:IntentShape
    a sh:NodeShape ;
    sh:targetClass core:Intent ;
    sh:property [
        sh:path intent:objective ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
    ] .

# --- Delegation Shapes --- 

ex:DelegationShape
    a sh:NodeShape ;
    sh:targetClass delegation:Delegation ;
    sh:property [
        sh:path delegation:delegatedBy ;
        sh:minCount 1 ;
        sh:class core:Agent ;
    ] ;
    sh:property [
        sh:path delegation:delegatesTo ;
        sh:minCount 1 ;
        sh:class core:Agent ;
    ] ;
    sh:property [
        sh:path delegation:delegationScope ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
    ] .

# --- Artifact Shapes --- 

ex:ArtifactShape
    a sh:NodeShape ;
    sh:targetClass core:Artifact ;
    sh:property [
        sh:path core:description ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
    ] .

ex:VerifiableCredentialShape
    a sh:NodeShape ;
    sh:targetNode ex:JPMynumberVC, ex:TWDIW_VC ;
    sh:property [
        sh:path security:securityBinding ;
        sh:minCount 1 ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path security:cryptographicBinding ;
                sh:hasValue "JWS" ;
            ]
        ]
    ] .

ex:EUDI_Compatible_VPShape
    a sh:NodeShape ;
    sh:targetNode ex:EUDI_Compatible_VP ;
    sh:property [
        sh:path security:securityBinding ;
        sh:minCount 1 ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path security:cryptographicBinding ;
                sh:hasValue "JWS" ;
            ] ;
            sh:property [
                sh:path security:trustModel ;
                sh:hasValue "eIDAS-compliant" ;
            ]
        ]
    ] .

# --- Execution Context Shape --- 

ex:GlobalKYCExecutionContextShape
    a sh:NodeShape ;
    sh:targetNode ex:GlobalKYCExecutionContext ;
    sh:property [
        sh:path execution-context:trustAnchors ;
        sh:minCount 1 ;
        sh:nodeKind sh:IRI ;
    ] ;
    sh:property [
        sh:path execution-context:policy ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
    ] .

# --- Action Shapes --- 

ex:ActionWithContextAndArtifactShape
    a sh:NodeShape ;
    sh:targetNode ex:GenerateEUDIVPAction, ex:SubmitEUDIVPAction, ex:VerifyEUDIVPAction ;
    sh:property [
        sh:path core:contextOf ;
        sh:minCount 1 ;
    ] ;
    sh:property [
        sh:path core:producesArtifact ;
        sh:minCount 1 ;
        sh:class core:Artifact ;
    ] .

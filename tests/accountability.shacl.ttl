@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix acc: <https://ns.slashlife.ai/agent/accountability#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# -- Shape for acc:AccountabilityEvent --
acc:AccountabilityEventShape
    a sh:NodeShape ;
    sh:targetClass acc:AccountabilityEvent ;
    sh:property [
        sh:path acc:eventId ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path acc:actor ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:nodeKind sh:IRI ;
    ] ;
    sh:property [
        sh:path acc:action ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:nodeKind sh:IRI ;
    ] .

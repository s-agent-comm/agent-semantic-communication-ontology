@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix ledger: <https://ns.slashlife.ai/agent/ledger#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# -- Shape for ledger:LedgerEvent --
ledger:LedgerEventShape
    a sh:NodeShape ;
    sh:targetClass ledger:LedgerEvent ;
    sh:property [
        sh:path ledger:eventId ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path ledger:timestamp ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:dateTime ;
    ] ;
    sh:property [
        sh:path ledger:actor ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:nodeKind sh:IRI ;
    ] .

@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix payment: <https://ns.slashlife.ai/agent/payment#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# -- Shape for payment:PaymentIntent --
payment:PaymentIntentShape
    a sh:NodeShape ;
    sh:targetClass payment:PaymentIntent ;
    sh:property [
        sh:path payment:payer ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:nodeKind sh:IRI ;
    ] ;
    sh:property [
        sh:path payment:payee ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:nodeKind sh:IRI ;
    ] ;
    sh:property [
        sh:path payment:amount ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:decimal ;
    ] .

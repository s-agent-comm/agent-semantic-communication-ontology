@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix sec: <https://ns.slashlife.ai/agent/security-binding#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# -- Shape for sec:SecurityBinding --
sec:SecurityBindingShape
    a sh:NodeShape ;
    sh:targetClass sec:SecurityBinding ;
    sh:property [
        sh:path sec:hasKeyMaterial ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:node sec:KeyMaterialShape ;
    ] .

# -- Shape for sec:KeyMaterial --
sec:KeyMaterialShape
    a sh:NodeShape ;
    sh:targetClass sec:KeyMaterial ;
    sh:property [
        sh:path sec:keyValue ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:string ;
    ] .

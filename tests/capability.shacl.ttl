@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix cap: <https://ns.slashlife.ai/agent/capability#> .
@prefix core: <https://ns.slashlife.ai/agent/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# -- Shape for cap:Capability --
cap:CapabilityShape
    a sh:NodeShape ;
    sh:targetClass cap:Capability ;
    sh:property [
        sh:path cap:capabilityId ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path cap:description ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:string ;
    ] .

# -- Shape for cap:CompositeCapability --
cap:CompositeCapabilityShape
    a sh:NodeShape ;
    sh:targetClass cap:CompositeCapability ;
    sh:property [
        sh:path cap:includes ;
        sh:minCount 1 ;
        sh:nodeKind sh:IRI ;
    ] .

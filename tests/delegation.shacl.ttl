@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix del: <https://ns.slashlife.ai/agent/delegation#> .
@prefix core: <https://ns.slashlife.ai/agent/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# -- Shape for del:Delegation --
del:DelegationShape
    a sh:NodeShape ;
    sh:targetClass del:Delegation ;
    sh:property [
        sh:path del:delegatedBy ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:nodeKind sh:IRI ;
    ] ;
    sh:property [
        sh:path del:delegatesTo ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:nodeKind sh:IRI ;
    ] ;
    sh:property [
        sh:path del:delegationScope ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:node del:DelegationScopeShape ;
    ] .

# -- Shape for del:DelegationScope --
del:DelegationScopeShape
    a sh:NodeShape ;
    sh:targetClass del:DelegationScope ;
    sh:property [
        sh:path del:allowedCapability ;
        sh:minCount 1 ;
        sh:nodeKind sh:IRI ;
    ] .
